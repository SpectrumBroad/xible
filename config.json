{
  "webserver": {
    "portnumber": 9600,
    "ssl": {
      "portnumber": 9601
    }
  },

  "nodes": {
    "path": "~/.xible/nodes"
  },

  "flows": {
    "path": "~/.xible/flows",
    "initlevel": 0
  },

  "vault": {
    "path": "~/.xible/vault.json"
  },

  "editor": {
    "settings": {
      "visible": true,
      "allowchange": true
    },
    "nodes": {
      "statuses": {
        "max": 5
      }
    },
    "flows": {
      "allowdirect": false
    },
    "viewstate": {
      "zoomstateonopen": "untouched"
    }
  },

  "registry": {
    "url": "https://registry.xible.io",

    "nodepacks": {
      "allowpublish": true,
      "allowinstall": true
    },

    "flows": {
      "allowpublish": true,
      "allowinstall": true
    }
  }
}
